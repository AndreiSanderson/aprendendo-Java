		z = 12;
		boolean r, r1, r2, r3, r4, r5;
		r = (x < y && y < z) ? true:false;
		r1 = (x < y && y == z) ? true:false;
		r2 = (x < y || y == z) ? true:false;
		r3 = (x < y ^ y == z) ? true:false;
		r4 = (x < y || y < z) ? true:false;
		
		System.out.println(r);
		System.out.println(r1);
		System.out.println(r2);
